    <view class="first_tab">
        <navigator class="goods_item" url="/pages/goods_detail/index?goods_id={{item.goods_id}}" open-type="navigate"
        wx:for="{{goodsList}}" wx:key="goods_id">
            <view class="goods_img_wrap">
                <image src="{{item.goods_small_logo ? item.goods_small_logo : 'https://ww1.sinaimg.cn/large/007rAy9hgy1g24by9t530j30i20i2glm.jpg'}}"
                mode="widthFix"></image>
            </view>
            <view class="goods_info_wrap">
                <view class="goods_name">{{item.goods_name}}</view>
